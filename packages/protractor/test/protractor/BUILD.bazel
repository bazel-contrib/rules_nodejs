load("//packages/protractor:index.bzl", "protractor_web_test_suite")
load("//packages/typescript:index.bzl", "ts_library")

ts_library(
    name = "ts_spec",
    testonly = True,
    srcs = ["test.spec.ts"],
    tsconfig = ":tsconfig.json",
    deps = [
        "@npm//@types/jasmine",
        "@npm//protractor",
    ],
    supports_workers = False,
)

ts_library(
    name = "ts_conf",
    testonly = True,
    srcs = ["conf.ts"],
    tsconfig = ":tsconfig.json",
    deps = [
        "//packages/protractor",
        "@npm//protractor",
    ],
    supports_workers = False,
)

protractor_web_test_suite(
    name = "test",
    configuration = ":ts_conf",
    deps = [
        ":ts_spec",
    ],
)
