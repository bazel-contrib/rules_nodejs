load("@build_bazel_rules_nodejs//:defs.bzl", "npm_package")

# Copy the license from our parent folder
genrule(
    name = "copy_LICENSE",
    srcs = ["@build_bazel_rules_nodejs//:LICENSE"],
    outs = ["LICENSE"],
    cmd = "cp $< $@",
)

npm_package(
    name = "npm_package",
    srcs = [
        ":README.md",
        ":index.js",
        ":package.json",
    ],
    visibility = ["//e2e:__pkg__"],
    deps = [
        ":copy_LICENSE",
    ],
)
