load("@build_bazel_rules_nodejs//:defs.bzl", "npm_package")

# Copy common bazelrc file to be included in this package
genrule(
    name = "copy_bazelrc",
    srcs = ["//:common.bazelrc"],
    outs = ["common.bazelrc"],
    cmd = "cp $< $@",
)

npm_package(
    name = "npm_package",
    srcs = [
        "README.md",
        "index.js",
        "package.json",
    ],
    deps = [
        ":common.bazelrc",
    ],
)
