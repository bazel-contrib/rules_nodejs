load("@build_bazel_rules_nodejs//:tools/defaults.bzl", "nodejs_test", "pkg_npm")
load("//third_party/github.com/bazelbuild/bazel-skylib:rules/copy_file.bzl", "copy_file")

# Copy common bazelrc file to be included in this package
copy_file(
    name = "copy_bazelrc",
    src = "//:common.bazelrc",
    out = "common.bazelrc",
)

pkg_npm(
    name = "npm_package",
    srcs = [
        "README.md",
        "index.js",
        "package.json",
    ],
    deps = [
        ":copy_bazelrc",
    ],
)

nodejs_test(
    name = "test",
    data = [
        "test.js",
        ":npm_package",
        "@npm//minimist",
    ],
    entry_point = ":test.js",
)

