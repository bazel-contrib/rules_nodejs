load("@bazel_tools//tools/build_defs/pkg:pkg.bzl", "pkg_tar")
load("@build_bazel_rules_nodejs//:tools/defaults.bzl", "nodejs_test", "pkg_npm")
load("//third_party/github.com/bazelbuild/bazel-skylib:rules/copy_file.bzl", "copy_file")

# Copy common bazelrc file to be included in this package
copy_file(
    name = "copy_bazelrc",
    src = "//:common.bazelrc",
    out = "common.bazelrc",
)

copy_file(
    name = "copy_bazelversion",
    src = "//:.bazelversion",
    out = ".bazelversion",
)

pkg_npm(
    name = "npm_package",
    srcs = [
        "README.md",
        "index.js",
        "package.json",
    ],
    deps = [
        ":copy_bazelrc",
        ":copy_bazelversion",
    ],
)

# This artifact is used for snapshot builds
pkg_tar(
    name = "archive",
    srcs = [":npm_package"],
    extension = "tar.gz",
    strip_prefix = "./npm_package",
    tags = ["manual"],
)

nodejs_test(
    name = "test",
    data = [
        "test.js",
        ":npm_package",
        "@npm//minimist",
    ],
    entry_point = ":test.js",
)

