load("@build_bazel_rules_nodejs//:tools/declare_directory.bzl", "declare_directory")
load("@npm_bazel_jasmine//:index.from_src.bzl", "jasmine_node_test")
load("@npm_bazel_terser//:index.from_src.bzl", "terser_minified")

declare_directory(
    name = "dir",
    srcs = glob(["input*.js"]),
)

terser_minified(
    name = "out.min",
    src = "dir",
)

jasmine_node_test(
    name = "test",
    srcs = ["spec.js"],
    data = [":out.min"],
)
