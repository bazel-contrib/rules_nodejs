load(":produces_js_as_defaultinfo.bzl", "produces_js_as_defaultinfo")

produces_js_as_defaultinfo(
    name = "src2_in",
    srcs = ["src2.js"],
)

terser_minified(
    name = "case2",
    src = ":src2_in",
    sourcemap = False,
)

jasmine_node_test(
    name = "test",
    srcs = [
        "terser_spec.js",
    ],
    deps = [
        # TODO(gregmagolan): can we get named .js outputs from terser_minified?
        ":case1",
        ":case2",
    ],
