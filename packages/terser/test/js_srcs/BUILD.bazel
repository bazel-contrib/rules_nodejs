load("@npm_bazel_jasmine//:index.from_src.bzl", "jasmine_node_test")
load("@npm_bazel_terser//:index.from_src.bzl", "terser_minified")

# Case 1: optimize InputArtifacts
filegroup(
    name = "src1_in",
    srcs = [
        "src1.js",
        "src1b.js",
    ],
)

terser_minified(
    name = "case1",
    src = ":src1_in",
    sourcemap = False,
)

