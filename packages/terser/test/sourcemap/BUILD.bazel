load("@build_bazel_rules_nodejs//:tools/declare_directory.bzl", "declare_directory")
load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")
load("//packages/terser:index.bzl", "terser_minified")

filegroup(
    name = "src1_and_map",
    srcs = [
        "src1.js",
        "src1.js.map",
    ],
)

terser_minified(
    name = "src1.min",
    src = ":src1_and_map",
)

jasmine_node_test(
    name = "test",
    srcs = [
        "terser_spec.js",
    ],
    data = ["@npm//source-map"],
    deps = [
        ":src1.min",
    ],
)

declare_directory(
    name = "dir",
    srcs = [
        "src1.js",
        "src1.js.map",
    ],
)

terser_minified(
    name = "dir.min",
    src = "dir",
)

jasmine_node_test(
    name = "directory_test",
    srcs = [
        "directory_spec.js",
    ],
    data = ["@npm//source-map"],
    deps = [
        ":dir.min",
    ],
)
