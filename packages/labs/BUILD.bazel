exports_files(["tsconfig.json"])

genrule(
    name = "copy_LICENSE",
    srcs = ["@build_bazel_rules_nodejs//:LICENSE"],
    outs = ["LICENSE"],
    cmd = "cp $< $@",
)

npm_package(
    name = "npm_package",
    srcs = [
        "@npm_bazel_labs//:package_contents",
    ],
    vendor_external = [
        "npm_bazel_labs",
    ],
    deps = [
        ":copy_LICENSE",
        "@npm_bazel_labs//webpack:cli_lib",
    ],
)
