load("//packages/esbuild/test:tests.bzl", "esbuild")
load("//packages/jasmine:index.bzl", "jasmine_node_test")
load("//packages/typescript:index.bzl", "ts_library")
load("@build_bazel_rules_nodejs//:index.bzl", "copy_to_bin")

copy_to_bin(
    name = "external_copied",
    srcs = ["external.css"],
)

ts_library(
    name = "main",
    srcs = [
        "main.ts",
    ],
    deps = [
        "@npm//@types/node",
    ],
)

esbuild(
    name = "default",
    entry_point = "main.ts",
    deps = [
        "external_copied",
        ":main",
    ],
)

esbuild(
    name = "with_css",
    entry_point = "main.ts",
    output_css = True,
    deps = [
        "external_copied",
        ":main",
    ],
)

jasmine_node_test(
    name = "bundle_test",
    srcs = ["bundle_test.js"],
    data = [
        ":default",
        ":with_css",
    ],
)
