load("@rules_nodejs//:index.bzl", "nodejs_test")
load("//packages/typescript:index.bzl", "ts_project")

SRCS = [
    "subdir/a.ts",
    "subdir/foo.json",
    "bar.json",
    # Regression test for #2115 - should not expect baz.js output
    "baz.svg",
]

ts_project(
    name = "tsconfig",
    srcs = SRCS,
    out_dir = "foobar",
)

ts_project(
    name = "tsconfig-no-outdir",
    srcs = SRCS,
    tsconfig = "tsconfig.json",
)

# Test that we don't try to declare .json outputs when tsc isn't producing any JS
ts_project(
    name = "tsconfig-decl-only",
    srcs = SRCS,
    emit_declaration_only = True,
)

nodejs_test(
    name = "test",
    data = [
        ":tsconfig",
        ":tsconfig-decl-only",
        ":tsconfig-no-outdir",
    ],
    entry_point = "verify.js",
    templated_args = [
        "$(locations :tsconfig)",
        "$(locations :tsconfig-no-outdir)",
    ],
)
