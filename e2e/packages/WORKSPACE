    name = "e2e_packages_npm_install",
    data = ["//:postinstall.js"],
    package_json = "//:npm1/package.json",
    package_lock_json = "//:npm1/package-lock.json",
    # Just here as a smoke test for this attribute
    prod_only = True,
    symlink_node_modules = False,
)

