workspace(
    name = "e2e_symlinked_node_modules_yarn",
    managed_directories = {"@npm": ["node_modules"]},
)

# There are some assertions that can only by made by running tests from within
# this nested repository folder. These assertions are run in CI so we use
# a local_repository here so we are testing against the root repository code.
local_repository(
    name = "build_bazel_rules_nodejs",
    path = "../..",
)

# We don't really need to run TypeScript rules, but we'll encounter some during
# the loading phase because some built-in code uses TypeScript
local_repository(
    name = "npm_bazel_typescript",
    path = "../../tools/mock_npm_bazel_typescript",
)

# rules_nodejs_dev_dependencies() required since we're using local_repository for
# build_bazel_rules_nodejs above.
load("@build_bazel_rules_nodejs//:package.bzl", "rules_nodejs_dev_dependencies")

rules_nodejs_dev_dependencies()

load("@build_bazel_rules_nodejs//:index.bzl", "npm_install")

npm_install(
    name = "npm",
    package_json = "//:package.json",
    package_lock_json = "//:package-lock.json",
    quiet = False,
)
