load("@build_bazel_rules_nodejs//:index.bzl", "rollup_bundle")
load("@npm_bazel_jasmine//:index.bzl", "jasmine_node_test")
load("@npm_bazel_typescript//:index.bzl", "ts_library")

ts_library(
    name = "lib",
    srcs = ["lib.ts"],
    deps = [
        "@npm//@types/node",
        "@npm//date-fns",
    ],
)

ts_library(
    name = "main",
    srcs = ["main.ts"],
    deps = [
        ":lib",
    ],
)

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob(["*.spec.ts"]),
    deps = [
        ":main",
        "@npm//@bazel/typescript",
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//typescript",
    ],
)

jasmine_node_test(
    name = "test",
    data = [
        # Verify that worker_protocol.proto can be referenced as a target in the generated npm bazel workspace
        "@npm_bazel_typescript//third_party/github.com/bazelbuild/bazel/src/main/protobuf:worker_protocol.proto",
    ],
    deps = [
        ":test_lib",
    ],
)

rollup_bundle(
    name = "bundle",
    entry_point = ":main.ts",
    deps = [
        ":main",
    ],
)

rollup_bundle(
    name = "bundle_sm",
    entry_point = ":main.ts",
    deps = [
        ":main",
        "@npm//source-map-support",
    ],
)

# For testing from the root workspace of this repository with bazel_integration_test.
filegroup(
    name = "all_files",
    srcs = glob(
        include = ["**/*"],
        exclude = [
            "bazel-out/**/*",
            "dist/**/*",
            "node_modules/**/*",
        ],
    ),
    visibility = ["//visibility:public"],
)
