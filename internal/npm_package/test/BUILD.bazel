load("//:defs.bzl", "jasmine_node_test", "npm_package")
load("//internal/common:typescript_mock_lib.bzl", "mock_typescript_lib")
load("//third_party/github.com/bazelbuild/bazel-skylib:rules/write_file.bzl", "write_file")

write_file(
    name = "produces_files",
    out = "a_dep",
    content = ["a_dep content"],
)

mock_typescript_lib(
    name = "ts_library",
    srcs = [
        "foo.d.ts",
        "foo.js",
    ],
    data = ["data.json"],
)

npm_package(
    name = "dependent_pkg",
    srcs = ["dependent_file"],
)

npm_package(
    name = "test_pkg",
    srcs = [
        "package.json",
        "some_file",
    ],
    packages = [":dependent_pkg"],
    replacements = {"replace_me": "replaced"},
    deps = [
        ":bundle.min.js",
        ":produces_files",
        ":ts_library",
    ],
)

jasmine_node_test(
    name = "test",
    srcs = ["npm_package.spec.js"],
    data = [":test_pkg"],
    deps = ["@npm//jasmine"],
)

genrule(
    name = "bundle",
    outs = ["bundle.min.js"],
    cmd = "echo -n 'bundle content' > $@",
)
