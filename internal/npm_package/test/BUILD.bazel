load("//:defs.bzl", "jasmine_node_test", "npm_package")
load("//internal/common:typescript_mock_lib.bzl", "mock_typescript_lib")

genrule(
    name = "produces_files",
    outs = ["a_dep"],
    cmd = "echo \"a_dep content\" > $@",
)

mock_typescript_lib(
    name = "ts_library",
    srcs = [
        "foo.d.ts",
        "foo.js",
    ],
    data = ["data.json"],
)

npm_package(
    name = "dependent_pkg",
    srcs = ["dependent_file"],
)

npm_package(
    name = "test_pkg",
    srcs = [
        "package.json",
        "some_file",
    ],
    packages = [":dependent_pkg"],
    replacements = {"replace_me": "replaced"},
    deps = [
        ":produces_files",
        ":ts_library",
    ],
)

jasmine_node_test(
    name = "test",
    srcs = ["npm_package.spec.js"],
    data = [":test_pkg"],
    node_modules = "//internal/test:node_modules",
)
