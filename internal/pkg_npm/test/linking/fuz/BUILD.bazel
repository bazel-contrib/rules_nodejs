load("@npm//typescript:index.bzl", "tsc")
load("@rules_nodejs//:index.bzl", "pkg_npm")

tsc(
    name = "fuz_lib",
    outs = [
        "index.d.ts",
        "index.js",
    ],
    args = [
        "-p",
        "$(execpath tsconfig.json)",
        "--outDir",
        # $(RULEDIR) is a shorthand for the dist/bin directory where Bazel requires we write outputs
        "$(RULEDIR)",
    ],
    data = [
        "index.ts",
        "tsconfig.json",
    ],
)

pkg_npm(
    name = "fuz",
    package_name = "fuz",
    visibility = ["//internal/pkg_npm/test/linking:__pkg__"],
    deps = [":fuz_lib"],
)

pkg_npm(
    name = "scoped_fuz",
    package_name = "@scoped/fuz",
    visibility = ["//internal/pkg_npm/test/linking:__pkg__"],
    deps = [":fuz_lib"],
)
