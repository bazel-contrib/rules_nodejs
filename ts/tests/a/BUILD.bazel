load("//ts:ts_config.bzl", "ts_config")
load("//ts:ts_project.bzl", "ts_project")

ts_config(
    name = "config",
    src = "tsconfig.json",
    deps = [
        "tsconfig-extended.json",
        "//ts/tests:tsconfig",
    ],
)

ts_project(
    name = "a",
    composite = True,
    tsconfig = "config",
