load("@build_bazel_rules_nodejs//:defs.bzl", "jasmine_node_test")
load("@build_bazel_rules_typescript//:defs.bzl", "ts_library")

ts_library(
    name = "main",
    srcs = ["main.ts"],
    compiler = "@build_bazel_rules_typescript//internal:tsc_wrapped_bin",
)

ts_library(
    name = "test_lib",
    testonly = True,
    srcs = glob(["*.spec.ts"]),
    deps = [
        ":main",
        "@npm//@types/jasmine",
        "@npm//@types/node",
        "@npm//typescript",
    ],
    compiler = "@build_bazel_rules_typescript//internal:tsc_wrapped_bin",
)

jasmine_node_test(
    name = "test",
    deps = [
        ":test_lib",
        "@npm//jasmine",
        "@npm//typescript",
    ],
)
