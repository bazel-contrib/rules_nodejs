workspace(
    name = "examples_nestjs",
    managed_directories = {"@npm": ["node_modules"]},
)

load("@bazel_tools//tools/build_defs/repo:http.bzl", "http_archive")

http_archive(
    name = "build_bazel_rules_nodejs",
    sha256 = "f9e7b9f42ae202cc2d2ce6d698ccb49a9f7f7ea572a78fd451696d03ef2ee116",
    urls = ["https://github.com/bazelbuild/rules_nodejs/releases/download/1.6.0/rules_nodejs-1.6.0.tar.gz"],
)

load("@build_bazel_rules_nodejs//:index.bzl", "yarn_install")

yarn_install(
    name = "npm",
    package_json = "//:package.json",
    yarn_lock = "//:yarn.lock",
)

load("@npm//:install_bazel_dependencies.bzl", "install_bazel_dependencies")

install_bazel_dependencies()

# We don't depend on rules_cc, but rules_docker depends on rules_go which optionally requires rules_cc
# https://github.com/bazelbuild/rules_go/blob/v0.22.3/go/private/repositories.bzl#L96-L105
# This uses git_repository fetch which breaks in bazel-in-bazel on CircleCI.
# (we don't have the right environment for git to run correctly)
# As a workaround we install it with http_archive - this should not be needed for typical users.
#
# The error looks like:
# INFO: Call stack for the definition of repository 'rules_cc' which is a git_repository (rule definition at /home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git.bzl:195:18):
#  - <builtin>
#  - /home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/io_bazel_rules_go/go/private/repositories.bzl:241:9
#  - /home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/io_bazel_rules_go/go/private/repositories.bzl:99:5
#  - /home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/io_bazel_rules_docker/repositories/go_repositories.bzl:33:5
#  - /home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/io_bazel_rules_docker/nodejs/image.bzl:44:5
#  - /tmp/tmp-19164Sgdxtn504V3o/WORKSPACE:59:1
# ERROR: An error occurred during the fetch of repository 'rules_cc':
#    Traceback (most recent call last):
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git.bzl", line 177
# 		_clone_or_update(ctx)
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git.bzl", line 36, in _clone_or_update
# 		git_repo(ctx, directory)
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git_worker.bzl", line 91, in git_repo
# 		_update(ctx, git_repo)
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git_worker.bzl", line 103, in _update
# 		fetch(ctx, git_repo)
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git_worker.bzl", line 129, in fetch
# 		_git_maybe_shallow(ctx, <5 more arguments>)
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git_worker.bzl", line 171, in _git_maybe_shallow
# 		_error(ctx.name, <2 more arguments>)
# 	File "/home/circleci/.cache/bazel/_bazel_circleci/05f212f3bda034380c8096e2edc688d3/external/bazel_tools/tools/build_defs/repo/git_worker.bzl", line 181, in _error
