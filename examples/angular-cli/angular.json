{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "schematics-angular-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "apps/schematics-angular-app",
      "sourceRoot": "apps/schematics-angular-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/frontend",
            "index": "apps/schematics-angular-app/src/index.html",
            "main": "apps/schematics-angular-app/src/main.ts",
            "polyfills": "apps/schematics-angular-app/src/polyfills.ts",
            "tsConfig": "apps/schematics-angular-app/tsconfig.app.json",
            "aot": true,
            "assets": [
              "apps/schematics-angular-app/src/favicon.ico",
              "apps/schematics-angular-app/src/assets"
            ],
            "styles": [
              "apps/schematics-angular-app/src/styles.scss"
            ],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/schematics-angular-app/src/environments/environment.ts",
                  "with": "apps/schematics-angular-app/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "6kb",
                  "maximumError": "10kb"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "frontend:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "frontend:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "frontend:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "apps/schematics-angular-app/src/test.ts",
            "polyfills": "apps/schematics-angular-app/src/polyfills.ts",
            "tsConfig": "apps/schematics-angular-app/tsconfig.spec.json",
            "karmaConfig": "karma.conf.js",
            "preserveSymlinks": true,
            "assets": [
              "apps/schematics-angular-app/src/favicon.ico",
              "apps/schematics-angular-app/src/assets"
            ],
            "styles": [
              "apps/schematics-angular-app/src/styles.scss"
            ],
            "scripts": []
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "apps/schematics-angular-app/tsconfig.app.json",
              "apps/schematics-angular-app/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "shared-buildable-lib": {
      "projectType": "library",
      "root": "libs/shared-buildable-lib",
      "sourceRoot": "libs/shared-buildable-lib/src",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-ng-packagr:build",
          "options": {
            "tsConfig": "libs/shared-buildable-lib/tsconfig.lib.json",
            "project": "libs/shared-buildable-lib/ng-package.json"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": ["libs/shared-buildable-lib/tsconfig.lib.json"],
            "exclude": ["**/node_modules/**", "!libs/shared-buildable-lib/**"]
          }
        }
      }
    }
  }
}
